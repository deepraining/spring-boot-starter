<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="senntyou.sbs.admin.dao.ProductCategoryDao">
  <resultMap id="listWithChildrenMap" type="senntyou.sbs.admin.dto.ProductCategoryWithChildrenItem"
             extends="senntyou.sbs.mbg.mapper.ProductCategoryMapper.BaseResultMap">
    <collection property="children"
                resultMap="senntyou.sbs.mbg.mapper.ProductCategoryMapper.BaseResultMap"
                columnPrefix="child_"></collection>
  </resultMap>
  <select id="listWithChildren" resultMap="listWithChildrenMap">
    select
      c1.id,
      c1.name,
      c2.id   child_id,
      c2.name child_name
    from product_category c1 left join product_category c2 on c1.id = c2.parent_id
    where c1.parent_id = 0
  </select>
</mapper>
